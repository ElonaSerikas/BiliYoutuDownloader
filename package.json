{
  "name": "biliyoutudownloader",
  "version": "1.0.0",
  "private": true,
  "description": "Bilibili & YouTube Downloader (Electron + React + TS + Fluent)",
  "main": "dist-electron/main.js",
  "type": "module",
  "scripts": {
    "dev:renderer": "vite --mode development",
    "build:main": "vite build --config electron.vite.config.ts --mode development",
    "dev": "concurrently -k \"npm run dev:renderer\" \"npm run build:main && electron .\"",
    "build": "tsc && vite build && electron-builder",
    "postinstall": "electron-builder install-app-deps"
  },
  "build": {
    "appId": "com.elonaserikas.biliyoutudownloader",
    "productName": "BiliYoutuDownloader",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**",
      "dist-electron/**",
      "resources/**"
    ],
    "mac": {
      "category": "public.app-category.video",
      "icon": "resources/icon.icns"
    },
    "win": {
      "target": "nsis",
      "icon": "resources/icon.ico",
      "requestedExecutionLevel": "asInvoker"
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "category": "AudioVideo",
      "icon": "resources"
    }
  },
  "dependencies": {
    "@fluentui/react-components": "^9.54.3",
    "@fluentui/react-icons": "^2.0.242",
    "adm-zip": "^0.5.14",
    "dayjs": "^1.11.11",
    "electron-store": "^9.0.0",
    "got": "^14.4.1",
    "nanoid": "^5.0.7",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.24.1",
    "sanitize-filename": "^1.6.3",
    "tough-cookie": "^4.1.4",
    "ytdl-core": "^4.11.5"
  },
  "devDependencies": {
    "@types/adm-zip": "^0.5.5",
    "@types/node": "^20.14.9",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@types/react-is": "^18.3.0",
    "@types/tough-cookie": "^4.0.5",
    "@vitejs/plugin-react": "^4.3.1",
    "concurrently": "^8.2.2",
    "electron": "^31.2.1",
    "electron-builder": "^24.13.3",
    "electron-is-dev": "^3.0.1",
    "typescript": "^5.5.3",
    "vite": "^5.3.2",
    "wait-on": "^7.2.0"
  }
}